<% unless @user.nil? -%>
  <% if @user.errors.any? -%>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <% if @user.new_record? -%>
        Unable to create user.
        <% else -%>
        Unable to update user <%= @user.login %>.
        <% end -%>
      </div>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end -%>
<% end -%>
